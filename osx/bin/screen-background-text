#!/bin/bash

set -euo pipefail
IFS=$'\n\t'

readonly text="$1"
readonly file=/Users/suhlig/Pictures/background-"$RANDOM".png

convert \
    -size 6720x3780 \
    xc:black \
    -pointsize 72 \
    -font helvetica \
    -fill white \
    -gravity north \
    -density 90 \
    -draw "text 100,100 '$text'" \
  "$file"

osascript -e "tell application \"Finder\" to set desktop picture to POSIX file \"$file\""

echo Background is now set to "$file".
