[user]
  name = Steffen Uhlig
  email = steffen@familie-uhlig.net

[credential]
  helper = cache --timeout=86400

[color]
  ui = auto

[alias]
  co = checkout
  ci = duet-commit
  st = status
  br = for-each-ref --sort=committerdate refs/heads/ --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'
  lg = log
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  type = cat-file -t
  dump = cat-file -p
  logtree = log --graph --oneline --all --decorate

[push]
  default = simple

[pull]
  rebase = true

[rebase]
  autoStash = true

[core]
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes

[diff]
  tool = vimdiff
  noprefix = true

[diff "ansible-vault"]
  textconv = ansible-vault view

[duet "env"]
	git-author-initials = su
	git-author-name = Steffen Uhlig
	git-author-email = steffen@familie-uhlig.net
	mtime = 1626537646
	git-committer-initials = 
	git-committer-name = 
	git-committer-email = 

[init]
  defaultBranch = main

[url "git@github.com:"]
  insteadOf = https://github.com/

# Pairing with nerab
[includeIf "gitdir:~/workspace/nerab/"]
  path = ~/workspace/nerab/.gitconfig
