[user]
  name = Steffen Uhlig

[credential]
  helper = cache --timeout=86400

[color]
  ui = auto

[alias]
  co = checkout
  ci = duet-commit
  st = status
  br = branch
	lg = log
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  type = cat-file -t
  dump = cat-file -p
  logtree = log --graph --oneline --all --decorate

[push]
  default = simple

[pull]
  rebase = true

[rebase]
  autoStash = true

[core]
  excludesfile = ~/.gitignore

